local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/shlexware/Orion/main/source')))()
local TweenService = game:GetService("TweenService")
local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local player = Players.LocalPlayer

-- Zmienne
_G.AutoFarm = false
_G.AutoReset = false
_G.Speed = 20
local ignoredCoins = {}

-- Okno Główne
local Window = OrionLib:MakeWindow({Name = "MM2 Ultimate Farmer", HidePremium = false, SaveConfig = true, ConfigFolder = "OrionTest"})

-- Zakładka Główna
local MainTab = Window:MakeTab({
	Name = "Farma",
	Icon = "rbxassetid://4483345998",
	PremiumOnly = false
})

-- Powiadomienie na start
OrionLib:MakeNotification({
	Name = "Wczytano!",
	Content = "Skrypt MM2 Orion Gotowy.",
	Image = "rbxassetid://4483345998",
	Time = 5
})

-- LOGIKA NOCLIP (Działa zawsze w tle gdy Farma jest ON)
RunService.Stepped:Connect(function()
    if _G.AutoFarm and player.Character then
        for _, v in pairs(player.Character:GetDescendants()) do
            if v:IsA("BasePart") then v.CanCollide = false end
        end
    end
end)

-- FUNKCJE POMOCNICZE
local function isBagFull()
    local mainGui = player:FindFirstChild("PlayerGui") and player.PlayerGui:FindFirstChild("MainGui")
    if mainGui then
        local gameFrame = mainGui:FindFirstChild("Game")
        local coinBackpack = gameFrame and gameFrame:FindFirstChild("CoinBackpack")
        if coinBackpack and coinBackpack:FindFirstChild("Full") then
            return coinBackpack.Full.Visible
        end
    end
    return false
end

local function getNextTarget()
    local char = player.Character
    local root = char and char:FindFirstChild("HumanoidRootPart")
    if not root then return nil end
    local closest, minDist = nil, math.huge
    for _, v in pairs(workspace:GetDescendants()) do
        if (v.Name == "Coin_Server" or v.Name == "Coin") and v:IsA("BasePart") and not ignoredCoins[v] then
            local d = (root.Position - v.Position).Magnitude
            if d < minDist then minDist = d; closest = v end
        end
    end
    return closest
end

-- PĘTLA FARMY
task.spawn(function()
    while true do
        if _G.AutoFarm then
            if _G.AutoReset and isBagFull() then
                if player.Character then player.Character:BreakJoints() end
                task.wait(5)
            end

            local target = getNextTarget()
            local root = player.Character and player.Character:FindFirstChild("HumanoidRootPart")
            if target and root then
                local dist = (root.Position - target.Position).Magnitude
                local duration = dist / _G.Speed
                local tween = TweenService:Create(root, TweenInfo.new(duration, Enum.EasingStyle.Linear), {CFrame = target.CFrame})
                tween:Play()
                
                repeat task.wait() until not target or not target.Parent or not _G.AutoFarm or (root.Position - target.Position).Magnitude < 2.5
                if target then ignoredCoins[target] = true end
                tween:Cancel()
            else
                ignoredCoins = {}
                task.wait(1)
            end
        end
        task.wait()
    end
end)

-- ELEMENTY GUI
MainTab:AddToggle({
	Name = "Włącz Auto-Farm",
	Default = false,
	Callback = function(Value)
		_G.AutoFarm = Value
        if not Value then ignoredCoins = {} end
	end    
})

MainTab:AddToggle({
	Name = "Auto Reset (Full Bag)",
	Default = false,
	Callback = function(Value)
		_G.AutoReset = Value
	end    
})

MainTab:AddSlider({
	Name = "Prędkość (Studs/s)",
	Min = 15,
	Max = 25,
	Default = 20,
	Color = Color3.fromRGB(255,255,255),
	Increment = 1,
	ValueName = "studs/s",
	Callback = function(Value)
		_G.Speed = Value
	end    
})

MainTab:AddButton({
	Name = "Usuń Skrypt i GUI",
	Callback = function()
        _G.AutoFarm = false
        OrionLib:Destroy()
	end    
})

OrionLib:Init()
